   @{
    Layout = "";    
    }
<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <link rel="stylesheet" href="~/css/index.css"/>
    </head>
    <body>
        <div id="wrapper">
            <div id="body">
                <div id="header">
                            <h1>CookBox</h1>
                            <form action='vlogin' method='POST' id='login'>
                            <p>Email:<input type='text' name='email'></p>
                            <p>Password:<input type='password' name='password'></p>
                            <button>Login</button>
                            <h5>@ViewBag.login</h5>
                        </form>
                </div>        
                <div id='register'>
                    <h2>Sign Up</h2>
                    <form action='vregister' method='POST'>
                        <p>First:<input type='text' name=first></p>
                        <p>Last:<input type='text' name=last></p>
                        <p>Email:<input type='text' name=email></p>
                        <p>Username:<input type='text' name=username></p>
                        <p>Password:<input type='password' name=password></p>
                        <p>Confirm Password:<input type='password' name=cpassword></p>
                        <button>Register</button>
                    </form>
                <div id=errors>
                    @{
                        foreach(var error in ViewBag.errors)
                        {
                            if(@error.Errors.Count > 0)
                            {
                                <h5>@error.Errors[0].ErrorMessage</h5>
                            }
                            else{
                                <p></p>
                            }
                        }
                    }
                </div>
            </div>
        </div>
            <div id='footer'>
                <a href="/">About Us</a>
                <a href="/">Contact</a>
                <a href="/">Faqs</a>
                <a href="/">Blog</a>
                <p>Service@cookbox.com</p>
                <p>Follow us on Facebook</p>
            </div>
    </body>
</html>